# iOS App Icon Generator Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Replicate API (Required for icon generation)
# =============================================================================
# Get your API token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/icongen

# =============================================================================
# JWT Configuration (Required for authentication)
# =============================================================================
# Secret key for signing JWT tokens - MUST be at least 32 characters
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE-ME-IN-PRODUCTION-min-32-chars

# JWT algorithm (default: HS256)
JWT_ALGORITHM=HS256

# =============================================================================
# OAuth - Google (Optional)
# =============================================================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# OAuth - GitHub (Optional)
# =============================================================================
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# OAuth - Apple (Optional)
# =============================================================================
# Get credentials from: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_TEAM_ID=
APPLE_KEY_ID=

# =============================================================================
# Application URLs
# =============================================================================
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000
